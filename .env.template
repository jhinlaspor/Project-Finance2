# Alpaca Trading Configuration
# ============================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Alpaca API Credentials (get from alpaca.markets)
ALPACA_API_KEY=your_api_key_here
ALPACA_API_SECRET=your_secret_key_here

# Trading Environment 
# Use "paper" for paper trading (recommended for testing)
# Use "live" for live trading (only after thorough testing!)
ALPACA_ENV=paper

# Bot Configuration
MAX_POSITION_SIZE=1000.00     # Maximum position size in USD
RISK_PER_TRADE=0.02          # Risk 2% per trade
PROFIT_TARGET=0.15           # 15% profit target
STOP_LOSS=0.50               # 50% stop loss

# Iron Condor Strategy Settings
IV_THRESHOLD=0.30            # Minimum implied volatility
DTE_MIN=10                   # Minimum days to expiration
DTE_MAX=45                   # Maximum days to expiration
DELTA_SHORT_PUT=0.15         # Delta for short put
DELTA_SHORT_CALL=0.15        # Delta for short call

# Risk Management
MAX_DAILY_LOSS=500.00        # Maximum daily loss limit
MAX_OPEN_POSITIONS=5         # Maximum number of open positions

# Logging
LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR
LOG_FILE=trading_bot.log     # Log file name

# Monitoring
WEBHOOK_URL=                 # Optional: Discord/Slack webhook for alerts
EMAIL_ALERTS=false           # Set to true to enable email alerts